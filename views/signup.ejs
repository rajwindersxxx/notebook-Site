<%- include ("./partials/headers.ejs") %>
<main class="container" id="new">
  <div class="form-block">
    <h2>Create a new accountðŸ‘‡</h2>
  </div>
  <div class="form-block">
    <form action="/signup" method="post" id="login-form">
      <div id="add-form">
        <label for="first_name" id="first_name">First name:</label>
        <input type="text" name="first_name" placeholder="Enter your first name" required autofocus="true" class="input-span" />
        <label for="last_name" id="last_name">Last name:</label>
        <input type="text" name="last_name" placeholder="Enter your last name" class="input-span" required />
        <label for="email" id="email">Email address:</label>
        <input type="text" name="email" placeholder="Enter your email" class="input-span" required />
        <label for="password" id="password">Password:</label>
        <input type="password" name="password" placeholder="Create a password" class="input-span" required />
        <label for="confirm-password" id="confirm-password">Confirm password:</label>
        <input type="password" name="confirm-password" placeholder="rewrite your password" class="input-span" required />
      </div>
      <div class="login-button">
        <input type="submit" value="SignUp" class="login" />
      </div>
    </form>
  </div>
</main>
